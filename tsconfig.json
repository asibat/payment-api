{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018", "DOM"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "useUnknownInCatchVariables": false,
    "types": ["jest"]
  },
  "include": ["src/**/*", "src/tests/**/*"],
  "exclude": ["node_calls", "dist"]
}
